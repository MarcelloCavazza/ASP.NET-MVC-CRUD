@model List<ASP.NETMVCCRUD.Models.Domain.Employees>

@{
}

<h1>Employees List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Salary</th>
            <th>CreatedAt</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Password</td>
                <td>@employee.Salary</td>
                <td>@employee.CreatedAt.ToString("dd-mm-yyyy")</td>
                <td><a href="/Employees/View/@employee.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>