@model ASP.NETMVCCRUD.Models.View.AddEmployeeViewModel
@{
}

<form method="post" action="Add">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" asp-for="Email">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" asp-for="Password">
    </div>
    <div class="mb-3">
        <label for="salary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="salary" asp-for="Salary">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>